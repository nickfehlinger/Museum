<p id="notice"><%= notice %></p>

<h1>Owners</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Piece</th>
      <th>Year bought</th>
      <th>Year sold</th>
      <th>Price bought</th>
      <th>Price sold</th>
      <th>Location bought</th>
      <th>Location sold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.person %></td>
        <td><%= owner.piece %></td>
        <td><%= owner.year_bought %></td>
        <td><%= owner.year_sold %></td>
        <td><%= owner.price_bought %></td>
        <td><%= owner.price_sold %></td>
        <td><%= owner.location_bought %></td>
        <td><%= owner.location_sold %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

